<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="banner" resource="default" engine="innodb" comment="banner">
        <column xsi:type="int" name="banner_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Banner ID"/>
        <column xsi:type="varchar" name="name" nullable="false" comment="Name"/>
        <column xsi:type="varchar" name="description" nullable="false" comment="Description"/>
        <column xsi:type="varchar" name="short-description" nullable="false" comment="Short Description"/>
        <column xsi:type="varchar" name="image" nullable="true" length="255" comment="Image"/>
        <column xsi:type="int" name="status" nullable="true" default="0" comment="Status"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="banner_id"/>
        </constraint>
        <index referenceId="BANNER_NAME" indexType="fulltext">
            <column name="name"/>
        </index>
    </table>
</schema>
